@model List<Joole_MVC_Core.POCOClasses.VacuumSpecDetailUI>

@{
    ViewBag.Title = "Suw";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        .headbar2 {
            display: inline-block;
            background-color: #f7f7f7;
            background-image: linear-gradient(white, #f7f7f7);
            width: 134%;
            height: 60px;
            margin-left: -195px;
            padding-top: 30px;
            padding-left: 280px;
            color: #26619c;
        }

        .imgtd {
            display: inline-block;
            border-style: solid;
            border-width: 1px;
            border-color: #D8D8D8;
            width: 230px;
            height: 145px;
            margin-top: 5px;
        }

        .infotd {
            display: inline-block;
            border-style: solid;
            border-width: 1px;
            border-color: #D8D8D8;
            width: 240px;
            height: 30px;
            font-weight: bolder;
            padding-left: 5px;
            padding-top: 4px;
            background-color: #E8E8E8;
            border-top-style: none;
        }

        .infotd2 {
            display: inline-block;
            border-style: solid;
            border-width: 1px;
            border-color: #D8D8D8;
            width: 230px;
            height: 30px;
            padding-left: 5px;
            padding-top: 4px;
            border-top-style: none;
            border-left-style: none;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="headbar2">
        <a onclick="location.href='@Url.Action("Vacuums", "ProductSummary")'" href="#">Mechanical > Vacuums > </a>
        <a href="#">Compare</a>
    </div>
    <table style="margin-left:215px;">
        <tr>
            <td class="imgtd" style="border-right-style:none; width:240px;"></td>
            <td class="imgtd"><img src="~/Images/Shark UL Vacuum.jpg" alt="42toaster" width="220" height="140" style="margin-left:5px;"></td>
            <td class="imgtd" style="border-left-style:none;"><img src="~/Images/Wing F9 Vacuum.jpg" alt="43toaster" width="220" height="140" style="margin-left:3px;"></td>
        </tr>
        <tr>
            <td class="infotd" style="width: 700px;"><u>DESCRIPTION</u></td>
        </tr>
        <tr>
            <td class="infotd">Manufacture</td>
            <td class="infotd2">Lavenci</td>
            <td class="infotd2">EHP Q</td>
        </tr>
        <tr>
            <td class="infotd">Series</td>
            <td class="infotd2">Shark 18</td>
            <td class="infotd2">Wing F9</td>
        </tr>
        <tr>
            <td class="infotd">Model</td>
            <td class="infotd2">SH789</td>
            <td class="infotd2">W99</td>
        </tr>
        <tr>
            <td class="infotd" style="width: 700px;"><u>TYPE</u></td>
        </tr>
        <tr>
            <td class="infotd">User Type</td>
            <td class="infotd2">Commercial</td>
            <td class="infotd2">Commercial</td>
        </tr>
        <tr>
            <td class="infotd">Application</td>
            <td class="infotd2">Indoor</td>
            <td class="infotd2">Indoor</td>
        </tr>
        <tr>
            <td class="infotd">Form Factor</td>
            <td class="infotd2">Upright</td>
            <td class="infotd2">Stick</td>
        </tr>
        <tr>
            <td class="infotd">Model Year</td>
            <td class="infotd2">2017</td>
            <td class="infotd2">2019</td>
        </tr>
        <tr>
            <td class="infotd" style="width: 700px;"><u>TECHNICAL SPECIFICATIONS</u></td>
        </tr>
        <tr>
            <td class="infotd">Air flow (CFM)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(1).AirFlowCFM)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(2).AirFlowCFM)</td>
        </tr>
        <tr>
            <td class="infotd">Sound at max speed (dBA)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(1).MaxSound)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(2).MaxSound)</td>
        </tr>
        <tr>
            <td class="infotd">Cleaning Width (in)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(1).CleaningWidth)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(2).CleaningWidth)</td>
        </tr>
        <tr>
            <td class="infotd">Attachment Reach (in)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(1).AttachmentReach)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(2).AttachmentReach)</td>
        </tr>
        <tr>
            <td class="infotd">Weight (lbs)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(1).VacuumWeight)</td>
            <td class="infotd2">@Html.DisplayFor(modelItem => Model.ElementAt(2).VacuumWeight)</td>
        </tr>

    </table>

</body>
</html>

